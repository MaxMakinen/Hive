#include <unistd.h>

void ft_putchar(char c)
{
	write(1, &c, 1);
}

int ft_iterative_factorial(int nb)
{
	int	x;

	x = 0;
	if (nb % 2 != 0)
		return (0);
	else
	{
		while (x < (nb/2))
		{
			if(x * x == nb)
				return(x);
			x++;
		}
	}
	return (0);
}

int	main(void)
{
	int x = 65 + ft_iterative_factorial(3);
	int	y = 65 + ft_iterative_factorial(9);

	ft_putchar(x);
	ft_putchar(y);
}
	
